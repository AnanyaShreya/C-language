/*Write a C program to read the age of a candidate and determine whether 
it is eligible for casting his/her own vote. */

#include<stdio.h>
int main()
{
	int age;
	printf("Enter the age of candidate: ");
	scanf("%d", &age);
	
	if(age==0)
		printf("Age cannot be zero");
		
	else if(age<0)
	{
		printf("Did you mean %d ?", age*-1);
		printf("\n If yes, eligible");
		printf("\n If no, not eligible");
	}
	
	else if(age>=18)
		printf("Eligible");
		
	else if(age<18)
		printf("Not eligible");
		
	
	
	else
		printf("Not Eligible");
	
	return 0;
}	
